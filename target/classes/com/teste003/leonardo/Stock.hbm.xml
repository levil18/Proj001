<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.teste.leonardo.App" table="url" catalog="leonardo">
	    <id name="hash" type="string">
            <column name="Hash" length="16" not-null="true" unique="true" />
        </id>
        <property name="original" type="string">
            <column name="UrlOriginal" length="512" not-null="true" />
        </property>
        <property name="usuario" type="java.lang.Integer">
            <column name="Id_Usr" />
        </property>
    </class>
</hibernate-mapping>
